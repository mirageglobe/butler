#!/usr/bin/env bats

SOURCE=src

@test "ensure that app exists" {
  run stat $SOURCE/fox.sh
  [ $status = 0 ]
}

@test "ensure that fake command returns error" {
  run $SOURCE/fox.sh randomcommand
  [ $status = 127 ]
}

@test "ensure that command : m : works" {
  run $SOURCE/fox.sh m
  [ $status = 0 ]
}

@test "ensure that command : mm : works" {
  run $SOURCE/fox.sh mm
  [ $status = 0 ]
}

@test "ensure that command : m-v : works" {
  run $SOURCE/fox.sh m-v
  [ $status = 127 ]
}

@test "ensure that command : r : fails" {
  run $SOURCE/fox.sh r
  [ $status = 127 ]
}
